{
  "name": "itms-download-manager",
  "version": "1.4.0",
  "description": "ITMS Download Manager Desktop App",
  "main": "./public/electron.js",
  "author": {
    "name": "LiuFa",
    "email": "liuf@ahtsoft.com"
  },
  "license": "MIT",
  "build": {
    "productName": "ITMS Download Manager",
    "appId": "cn.joylau.code.itms-download-manager",
    "copyright": "Copyright © 合肥安慧软件, Inc. All rights reserved.",
    "compression": "store",
    "asar": true,
    "files": [
      "build/"
    ],
    "extraResources": [
      {
        "from": "./LICENSE",
        "to": "./../LICENSE.txt"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "./public/icons/win.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "./public/icons/osx.icns",
      "extendInfo": {
        "URL types": [
          {
            "URL identifier": "ITMS Download Manager",
            "URL Schemes": [
              "itms-download-manager"
            ]
          }
        ]
      }
    },
    "dmg": {
      "icon": "./public/icons/osx.icns"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./public/icons/win.ico",
      "uninstallerIcon": "./public/icons/win.ico",
      "installerHeaderIcon": "./public/icons/win.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "安慧管控平台文件下载器(通用版)",
      "license": "./../static/license.html",
      "include": "./static/nsis/installer.nsh"
    }
  },
  "devDependencies": {
    "@ant-design/icons": "^4.2.1",
    "@babel/plugin-proposal-decorators": "^7.10.1",
    "@craco/craco": "^5.6.4",
    "antd": "^4.3.3",
    "axios": "^0.19.2",
    "craco-less": "^1.17.0",
    "crypto-js": "^4.0.0",
    "dexie": "^3.0.1",
    "electron": "^9.0.4",
    "electron-builder": "^22.7.0",
    "electron-rebuild": "^1.11.0",
    "mobx": "^5.15.4",
    "mobx-react": "^6.2.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "request-progress": "^3.0.0",
    "semver": "^7.3.2"
  },
  "dependencies": {
    "compressing": "^1.5.1",
    "exceljs": "^4.1.0",
    "fs-extra": "^9.0.1",
    "klaw": "^3.0.0",
    "readdirp": "^3.4.0",
    "request": "^2.88.2",
    "wrench": "^1.5.9"
  },
  "scripts": {
    "eletron-start": "electron .",
    "start": "craco start",
    "html-build": "craco build",
    "build": "craco build && electron-builder -mw",
    "test": "craco test",
    "eject": "craco eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "."
}
